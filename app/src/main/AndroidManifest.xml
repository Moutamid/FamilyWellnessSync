<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-feature
        android:name="android.hardware.telephony"
        android:required="false" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
<uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FamilyWellness"
        tools:targetApi="31">
        <activity
            android:name="com.moutimid.familywellness.home.BMI.AboutActivity"
            android:exported="true" />
        <activity
            android:name="com.moutimid.familywellness.home.BMI.MainActivity"
            android:exported="true" />
        <activity
            android:name="com.moutimid.familywellness.home.EmergencyCallActivity"
            android:exported="false" />
       <activity
            android:name="com.moutimid.familywellness.authetications.SignupActivity"
            android:exported="true" />
        <activity
            android:name="com.moutimid.familywellness.authetications.ResetPasswordActivity"
            android:exported="true" />
        <activity
            android:name="com.moutimid.familywellness.authetications.AccountActivity"
            android:exported="true" />
        <activity
            android:name="com.moutimid.familywellness.authetications.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.moutimid.familywellness.authetications.LoginActivity"
            android:exported="true" />
        <activity android:name="com.moutimid.familywellness.home.MainActivity" />
    </application>

</manifest>