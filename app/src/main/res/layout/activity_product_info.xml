<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ProductDrawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/PBody"
        android:layout_width="match_parent"
        android:background="@color/white"

        android:layout_height="match_parent">

        <include
            android:id="@+id/ProductToolBar"
            layout="@layout/main2_toolbar"
            android:visibility="gone"/>
        <ImageView
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginLeft="17dp"
            android:onClick="backPress"
            android:layout_marginTop="20dp"

            android:src="@drawable/baseline_arrow_back_ios_24" />


        <TextView
            android:id="@+id/PageTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="57dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/kanit_bold"
            android:gravity="left"
            android:text="Product Info"
            android:textColor="#000"
            android:textSize="22dp" />

        <ImageView
            android:id="@+id/ProductFav"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:visibility="gone"
            android:layout_marginRight="40dp"
            android:layout_marginTop="20dp"
            android:layout_alignParentRight="true" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingEnd="15dp"
            android:paddingStart="5dp"
            android:layout_above="@+id/AddToCart"
            android:layout_marginTop="70dp"

            android:layout_below="@id/ProductToolBar"
  >

            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/ImageContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white">

                    <ImageView
                        android:id="@+id/ProductImage"
                        android:layout_width="match_parent"
                        android:layout_height="220dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="80dp"
                        android:layout_marginTop="17dp"
                        android:src="@drawable/defualt_image"
                        android:layout_marginRight="80dp"
                        android:background="#FFF"
                        android:scaleType="fitXY" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"

                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginTop="5dp"
                        android:background="#E43131"
                        android:padding="5dp"
                        android:text="B2ala Store"
                        android:textColor="#FFF"
                        android:textSize="18dp" />


                </RelativeLayout>

                <TextView
                    android:id="@+id/ProductName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/kanit_bold"
                    android:text="Apple"
                    android:gravity="center"
                    android:textColor="#000"
                    android:textSize="26dp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="17dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/kanit_medium"
                        android:text="Category"
                        android:layout_weight="1"
                        android:textColor="#000"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/ProductCategory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/kanit_regular"
                        android:layout_weight="2"
                        android:textColor="#000"
                        android:textSize="13dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="17dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/kanit_medium"
                        android:text="Price"
                        android:layout_weight="1"
                        android:textColor="#000"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/CurrentProductPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/kanit_regular"
                        android:text=""
                        android:layout_weight="2"
                        android:textColor="#000"
                        android:textSize="13dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="17dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/kanit_medium"
                        android:layout_weight="1"
                        android:text="Available Amount"
                        android:textColor="#000"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/ProductAvailableAmount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:fontFamily="@font/kanit_regular"
                        android:textColor="#000"
                        android:textSize="13dp" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="17dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/kanit_medium"
                    android:text="Product Description"
                    android:textColor="#000"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="17dp"
                    android:fontFamily="@font/kanit_regular"
                    android:lineSpacingExtra="3dp"
                    android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book"
                    android:textColor="#000"
                    android:textSize="13dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_margin="10dp"
                    android:text=""
                    android:textColor="#000"
                    android:textSize="17dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/ProductExpiryDate"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_margin="10dp"
                    android:text=""
                    android:textColor="#000"
                    android:textSize="17dp"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text=""
                    android:textColor="#000"
                    android:textSize="17dp" />


                <LinearLayout
                    android:id="@+id/OfferContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/OldProductPrice"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:text=""
            android:textSize="15dp" />


            <TextView
                android:id="@+id/OfferRate"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:textColor="#F00"
                android:text=""
                android:textSize="18dp" />

                </LinearLayout>

            </LinearLayout>
        </ScrollView>


        <RelativeLayout
            android:id="@+id/AddToCart"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="60dp"

            android:layout_marginTop="10dp"
            android:layout_marginEnd="60dp"
            android:layout_marginBottom="17dp"
            android:background="@drawable/roundbutton"
            android:backgroundTint="@color/statusbar">

            <ImageView
                android:id="@+id/CartIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                app:srcCompat="@drawable/new_cart" />

            <TextView
                android:id="@+id/AddToCartText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text="Add To Cart"
                android:textAllCaps="false"
                android:fontFamily="@font/kanit_regular"

                android:textColor="#FFF"
                android:textSize="17dp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/DeleteFromCart"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="60dp"
android:visibility="gone"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="60dp"
            android:layout_marginBottom="17dp"
            android:background="@drawable/roundbutton"
            android:backgroundTint="@color/statusbar">

            <ImageView
                android:id="@+id/DeleteIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_baseline_delete_24"
                android:layout_marginTop="8dp"
                android:visibility="gone"
                android:layout_marginLeft="17dp" />

            <TextView
                android:id="@+id/DeleteFromCartText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text="Delete from Cart"
                android:textAllCaps="false"
                android:textColor="#FFF"
                android:textSize="17dp"
                android:fontFamily="@font/kanit_regular"
                android:textStyle="bold"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/CheckCartContainer"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:background="@drawable/roundbutton"
            android:visibility="gone">

            <TextView
                android:id="@+id/Text"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:text="Shopping Cart"
                android:textColor="#FFF"
                android:fontFamily="@font/kanit_medium"
                android:gravity="center"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/Text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Do you Want to Add this\nproduct to your cart ?"
                android:textColor="#FFF"
                android:layout_below="@id/Text"
                android:fontFamily="@font/kanit_medium"
                android:gravity="center"
                android:textSize="16dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/BackBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="30dp"
                android:text="Back"
                android:background="@drawable/roundbutton"

                android:backgroundTint="#6C6868"
                android:padding="10dp"
                android:layout_alignParentBottom="true"
                android:textAllCaps="false"
                android:textColor="#fff" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/ConformBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="Confirm"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/roundbutton"
                android:backgroundTint="#4CAF50"
                android:padding="10dp"
                android:layout_alignParentBottom="true"
                android:textAllCaps="false"
                android:textColor="#fff" />

        </RelativeLayout>

    </RelativeLayout>



</androidx.drawerlayout.widget.DrawerLayout>